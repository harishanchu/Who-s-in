#myModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        %h4#myModalLabel.modal-title Add One Of Your Colleagues
      .modal-body
        .new-user-form
        %form{name: "NewUser", :"ng-submit" => "createNewUser()", novalidate: true}
          .form-group{:"ng-repeat" => "field in fields"}
            %label {{field}} {{$first ? "" : " Address"}}
            %small{:"ng-show" => "field == 'Email Address'"} Who's In will use your email address to fetch your gravatar.
            %input.form-control{:"ng-model" => "user[field.toLowerCase()]", :"ng-keydown" => "NewUser.$valid && submitWithKeyPress($event)", required: true}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button", :"ng-click" => "user['email'] && user['mac'] && createNewUser()", "data-dismiss" => "modal", :"ng-disabled" => "!NewUser.$valid"} Save changes